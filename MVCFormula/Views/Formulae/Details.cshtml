@model MVCFormula.Models.Formula

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/FormulaImages/" + (Model.FormulaPicture ?? "blankImage.png");
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Manufacturer.Name) @Html.DisplayFor(model => model.Model)</h4>
    <hr />
    <img src="@photoPath"
         asp-append-version="true" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tyres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tyres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Drivers)
        </dt>
 
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Driver</th>
                    <th>Fuel</th>
                    <th>Chassis</th>
                    <th>Pts</th>
                </tr>
                @foreach (var item in Model.Drivers)
                {
            <tr>
                <td>
                    <a asp-controller="Drivers" asp-action="Details" asp-route-id="@item.Driver.Id">@Html.DisplayFor(modelItem => item.Driver.FullName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chassis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chassis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pts)
                </td>
                <td>
                    <a asp-controller="FormulaDriver" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="FormulaDriver" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="FormulaDriver" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
