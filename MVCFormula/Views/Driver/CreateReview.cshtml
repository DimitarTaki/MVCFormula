@model MVCFormula.ViewModels.ReviewCreateViewModel
@{ ViewData["Title"] = "Create Driving"; }

<h1>Add a New Driving</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.FormulaId" class="control-label"></label>
                <select asp-for="Review.FormulaId" class="form-control" asp-items="ViewBag.FormulaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Review.DriverId" class="control-label"></label>
                <select asp-for="Review.DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Review.Fuel" class="control-label"></label>
                <input asp-for="Review.Fuel" class="form-control" />
                <span asp-validation-for="Review.Fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Chassis" class="control-label"></label>
                <input asp-for="Review.Chassis" class="form-control" />
                <span asp-validation-for="Review.Chassis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Pts" class="control-label"></label>
                <input asp-for="Review.Pts" class="form-control" />
                <span asp-validation-for="Review.Pts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">$(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });</script>
}

