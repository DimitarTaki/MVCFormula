@model MVCFormula.Models.Formula

@{ ViewData["Title"] = "Car Details";
    var photoPath = "~/FormulaImages/" + (Model.FormulaPicture ?? "blankImage.png"); }

<h1>Car Details</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Manufacturer.Name) @Html.DisplayFor(model => model.Model) | <a asp-controller="Formulae" asp-action="DrivingFormula" asp-route-id="@Model.Id">Driving</a> |
        <a asp-controller="Driver" asp-action="CreateReview">Review this Car</a>
    </h4>
    <hr />
    <img src="@photoPath"
         height="480"
         width="800"
         asp-append-version="true" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Driver" asp-action="ManufacturerDetails" asp-route-id="@Model.Manufacturer.Id">@Html.DisplayFor(model => model.Manufacturer.Name)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tyres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tyres)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Cars">Back to List</a>
</div>
