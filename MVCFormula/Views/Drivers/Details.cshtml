@model MVCFormula.Models.Driver

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/DriverImages/" + (Model.DriverPicture ?? "blankImage.png");
}

<h1>Details</h1>

<div>
    <h4> @Html.DisplayFor(model => model.FullName)</h4>
    <hr />
    <img src="@photoPath"
         height="200" width="200"
         asp-append-version="true" />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Podiums)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Podiums)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Points)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Points)
        </dd>
        <dt class="col-sm-2">
            Formulas
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Model</th>
                    <th>Fuel</th>
                    <th>Chassis</th>
                    <th>Pts</th>
                </tr>
                @foreach (var item in Model.Formulas)
                {
    <tr>
        <td>
            <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.Formula.Id">@Html.DisplayFor(modelItem => item.Formula.Model)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fuel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chassis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pts)
        </td>
        <td>
            <a asp-controller="FormulaDrivers" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-controller="FormulaDrivers" asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-controller="FormulaDrivers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>}
            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
